{
  "version": 2,
 
  "builds": [
    {
      "src": "mernapp/backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "mernapp/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "mernapp/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "mernapp/build/$1"
    }
  ]
}
